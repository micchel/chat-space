.flash-box
  .notice
    グループを作成しました
.wrapper
  = render partial: 'chat-side'
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          ggg
        %ul.main-header__left-box__member-list
          Member:
          %li.main-header__left-box__member-list__member
            micchel
      .main-header__edit-btn
        Edit
    .messages
      = render partial: 'message'
    .form
      %form
        .input-box
          .input-box__text
            type a message
          %label.input-box__image
            = fa_icon 'image'
            %input.input-box__image__file{ type: "file", name: "file"}
        .submit-btn
          Send