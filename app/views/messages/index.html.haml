.flash-box
  .notice
    グループを作成しました
.wrapper
  = render 'shared/chat_side'
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          ggg
        %ul.main-header__left-box__member-list
          Member:
          %li.main-header__left-box__member-list__member
            micchel
      .main-header__right-box
        = link_to '', class: "main-header__right-box__button"
        .main-header_right-box__button
          Edit
    .messages
      = render 'message'
    .form
      .form__text
        type a message
      %label.form__mask
        = fa_icon 'image', class: "form__mask__image"
        %input.hidden{ type: "file", name: "file"}
      .form__submit
        Send
